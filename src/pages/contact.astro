---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Conectate con nosotros" />

  <ContactUs
    id="form"
    title="Envianos un mensaje hoy!"
    subtitle="Escribenos y nos pondremos en contacto contigo lo antes posible."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Enviando este formulario, aceptas recibir comunicaciones comerciales de Steel4d. Puedes desuscribirte en cualquier momento.',
    }}
    description="La respuesta puede tardar hasta 24 horas."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aqui para ayudarte"
    items={[
      {
        title: 'Soporte General',
        description: `Habla con nosotros sobre cualquier tema relacionado con nuestros servicios.`,
      },
      {
        title: 'Contacto para proyectos',
        description:
          'Si tienes un proyecto en mente y quieres obtener más información sobre cómo podemos ayudarte, no dudes en ponerte en contacto con nosotros.',
      },
      {
        title: 'Soporte tecnico',
        description:
          'Si tienes alguna pregunta técnica o necesitas ayuda con proyectos específicos, no dudes en ponerte en contacto con nosotros.',
      },
      {
        title: 'Numero de telefono',
        description: '+54 (011) 1234-5678',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info@steel4d.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
