import { getPermalink } from '~/utils/permalinks';
import Content from '~/components/widgets/Content.astro';
/* Image from  src\assets\images\CasaAduar\Ejemplo.jpg */
import Note from '~/components/widgets/Note.astro';

import SamplesWork from '~/components/widgets/SamplesWork.astro';
import ImageCarousel from '~/components/widgets/ImageCarousel.astro';

const metadata = {
  title: 'Precios de proyectos',
};

import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/thumbs';
import 'swiper/css/pagination';


const model1 = [
{ src: 'src/assets/images/San Martin/1.jpeg', alt: 'Proyeccion en cad' },
  { src: 'src/assets/images/San Martin/steel1.jpg', alt: 'Steel' },
  { src: 'src/assets/images/San Martin/steel2.jpg', alt: 'Steel2' },
  { src: 'src/assets/images/San Martin/final.jpeg', alt: 'Proyeccion realizada' },
];

const model2 = [
  { src: 'src/assets/images/Springdale/1.jpg', alt: 'Proyeccion en cad' },
  { src: 'src/assets/images/Springdale/2.jpg', alt: 'Proyeccion en cad 2' },
  { src: 'src/assets/images/Springdale/steel1.jpg', alt: 'Steel' },
  { src: 'src/assets/images/Springdale/steel2.jpg', alt: 'Steel2' },
  { src: 'src/assets/images/Springdale/steel3.jpg', alt: 'Steel3' },
  { src: 'src/assets/images/Springdale/final.jpg', alt: 'Proyeccion realizada' },
];
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
      title="Proyectos con precios transparentes"
    subtitle="Descubre los planes de precios que se adaptan a tus necesidades y presupuesto."
  />


  <!-- SamplesWork Widget ******************* -->
  <SamplesWork
  title={"Camping 1"}
  description={"Construcción de una casa de dos plantas con estructura de acero y diseño moderno."}
  items={
    [
      {
        title: '4 Habitaciones',
        icon: 'tabler:bed-filled',
      },
      {
        title: '2 Baños',
        icon: 'tabler:bath-filled',
      },
      {
        title: '60 m²',
        icon: 'tabler:maximize', 
      },
      {
        title: 'U$D 48.000',
        icon: 'tabler:tag-filled', 
      },
    ]
  }
  images={model1}
/>
<SamplesWork
title={"Hogar Familiar 2"}
description={"Casa de dos plantas con diseño minimalista y espacios abiertos."}
items={
  [
    {
      title: '5 Habitaciones',
      icon: 'tabler:bed-filled',
    },
    {
      title: '2 Baños',
      icon: 'tabler:bath-filled',
    },
    {
      title: '95 m²',
      icon: 'tabler:maximize', 
    },
    {
      title: 'U$D 65.000',
      icon: 'tabler:tag-filled', 
    },
  ]
}
images={model2}
/>
