/* console.log('Received showToggleTheme:', showToggleTheme); */


const anuncios = [
  { texto: "Horario: Lunes a Viernes de 9:00 a 18:00", url: "#" },
  { texto: "Teléfono: +54 (011) 6547 - 6311", url: "#" },
  { texto: "Consultoría en persona y virtualmente", url: "#" },
];

// Determine the backdrop class
/* const backdropClass = showToggleTheme 
  ? "bg-black/70 dark:bg-white/10" 
  : "bg-white/5"; */
---
<div 
  class:list={[
    "overflow-hidden relative py-2 px-4 backdrop-blur-sm text-white text-sm z-50",
    
  ]}
>
  <div class="flex animate-scroll w-max">
    {anuncios.map((anuncio) => (
      <a 
        href={anuncio.url} 
        class="mr-8 text-white hover:text-gray-300 transition-colors text-shadow-sm"
      >
        {anuncio.texto}
      </a>
    ))}
  </div>
</div>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-scroll {
    animation: scroll 15s linear infinite;
  }

  .text-shadow-sm {
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
  }
</style>
